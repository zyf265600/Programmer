{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ 生成活动文件",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"${file}",
				"EmployeeManager.cpp",
				"Input_Tester.cpp",
				"Employee.cpp",
				"Staff.cpp",
				"Manager.cpp",
				"CEO.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"--std=c++11"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/clang++"
		}
	]
}